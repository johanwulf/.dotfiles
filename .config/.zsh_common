alias v="nvim"
alias vim="nvim"
alias n="nvim ."
alias src="source ~/.zshrc"
alias c="clear"
alias grep="grep --color"
alias -s {js,scss,html,css,jsx,tsx}=nvim

# Replacements
alias ls="exa"
alias la="exa -a"
alias ll="exa -al"
alias cat="bat"

# Utilities
mkd() {
    mkdir $1
    cd $1
}

# https://github.com/mdumitru/fancy-ctrl-z
# Used to be able to toggle back and forth between nvim and console
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line -w
    c
  else
    zle push-input -w
    zle clear-screen -w
    c
  fi
}

zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

# Worklog
worklog () {
    date=$1
    year=$(date +%Y)
    month=$(date +%m)
    day=$(date +%d)
    dir="$HOME/worklog/$year/$month"
    if [[ ! -d "$dir" ]]; then
        mkdir -p "$dir"
    fi
    file="$dir/$day.md"
    sed "1s/# Date/# $date/" "$HOME/worklog/TEMPLATE.md" > "$file"
    nvim "$file"
}

