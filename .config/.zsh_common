export EDITOR=nvim 
export WORK_PATH=$HOME/WORK
export PERSONAL_PATH=$HOME/personal

alias v="nvim"
alias vim="nvim"
alias n="nvim ."
alias src="source $HOME/.zshrc"
alias c="clear"
alias grep="grep --color"
alias sed="gsed"

# Replacements
alias ls="exa"
alias la="exa -a"
alias ll="exa -al"

# https://github.com/mdumitru/fancy-ctrl-z
# Used to be able to toggle back and forth between nvim and terminal 
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line -w
  else
    zle push-input -w
  fi
}

zle -N fancy-ctrl-z
bindkey ^Z fancy-ctrl-z

# Fuzzy find folders in personal and work directory, and cd into them
fzf-folder () {
    cd $(find $WORK_PATH $PERSONAL_PATH $HOME/.config -type d -not \( -path "*/.git" -prune \) -not \( -path "*/node_modules" -prune \) | fzf)
    zle accept-line
}

zle -N fzf-folder
bindkey ^F fzf-folder

# Fuzzy find folders and files and open them with nvim
fzf-nvim () {
    nvim $(find $WORK_PATH $PERSONAL_PATH $HOME/.config -not \( -path "*/.git" -prune \) -not \( -path "*/node_modules" -prune \) | fzf)
    zle accept-line
}

zle -N fzf-nvim
bindkey ^N fzf-nvim
