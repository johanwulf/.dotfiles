alias v="nvim"
alias vim="nvim"
alias n="nvim ."
alias src="source ~/.zshrc"
alias c="clear"
alias grep="grep --color"
alias -s {js,scss,html,css,jsx,tsx}=nvim

# Replacements
alias ls="exa"
alias la="exa -a"
alias ll="exa -al"
alias cat="bat"

# Utilities
mkd() {
    mkdir $1
    cd $1
}

# https://github.com/mdumitru/fancy-ctrl-z
# Used to be able to toggle back and forth between nvim and console
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line -w
    c
  else
    zle push-input -w
    zle clear-screen -w
    c
  fi
}

zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

newbranch() {
    year=$(date +%Y)
    month=$(date +%m)
    day=$(date +%d)
    dir="$HOME/personal/nutty-notes/worklog/$year/"
    if [[ ! -d "$dir" ]]; then
        mkdir -p "$dir"
    fi
    file="$dir/$year-$month-$day.md"
    if [[ ! -f "$file" ]]; then
        touch $file
    fi
    echo "[$1]($JIRA_LINK$1)" >> $file
}

nb() {
    case $PWD in 
        ($WORKFOLDER)*) newbranch "$1";;
    esac
    git checkout -b $1
}

