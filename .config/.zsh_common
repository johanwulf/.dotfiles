alias v="nvim"
alias vim="nvim"
alias n="nvim ."
alias src="source ~/.zshrc"
alias c="clear"
alias grep="grep --color"
alias ls="ls --color=auto"
alias la="ls -a"
alias ll="ls -al"
alias cat="bat"
alias -s {js,scss,html,css,jsx,tsx}=nvim

mkd() {
    mkdir $1
    cd $1
}

# https://github.com/mdumitru/fancy-ctrl-z
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line -w
    c
  else
    zle push-input -w
    zle clear-screen -w
    c
  fi
}

zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z
